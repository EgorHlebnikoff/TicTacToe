{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es6"
    ],
    "sourceMap": true,
    "outDir": "../../server",
    "baseUrl": "../../",
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ]
    },
    "types": [
      "node",
      "express"
    ],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "../src/**/*"
  ]
}